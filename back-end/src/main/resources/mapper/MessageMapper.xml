<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--suppress ALL -->
<mapper namespace="com.kingfar.blog.mapper.MessageMapper">

    <select id="queryMessageByToAndFrom" resultType="com.kingfar.blog.entity.MessageData">
        select * from t_message where fromuser = #{fromuser}|#{touser} and touser = #{touser}|#{fromuser} order by mtime;
    </select>

    <insert id="insertMessage">
        insert into t_message(fromuser,content,touser) values(#{fromuser},#{content},#{touser});
    </insert>

</mapper>